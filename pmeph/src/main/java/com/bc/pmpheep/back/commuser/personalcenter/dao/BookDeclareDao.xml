<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.bc.pmpheep.back.commuser.personalcenter.dao.BookDeclareDao">

	<!-- 选题申报信息插入 -->
	<insert id="insertTopic" parameterType="java.util.Map">
		insert into
		topic(user_id,bookname,reader,deadline,source,word_number,picture_number,subject,rank,type,is_staging,auth_progress,
		bank_account_id,purchase,sponsorship,is_translation,original_bookname,original_author,nation,edition,vn,is_opts_handling,submit_time)
		values(
		#{user_id},#{bookname},#{reader},#{deadline},#{source},#{word_number},#{picture_number},#{subject},#{rank},#{type},#{is_staging},#{auth_progress},#{bank_account_id},
		#{purchase},#{sponsorship},#{is_translation},#{original_bookname},#{original_author},#{nation},#{edition},#{vn},#{is_opts_handling},#{submit_time}
		)
	</insert>
	<!-- 根据条件查询申报信息 -->
	<select id="queryTopic" parameterType="java.util.Map"
		resultType="java.util.Map">
		select * from topic t1 where 1= 1
		<if test="vn != null and vn != ''">
			and t1.vn = #{vn}
		</if>
		<if test="topic_id != null and topic_id != ''">
			and t1.id = #{topic_id}
		</if>
	</select>
	<select id="getMaxTopicVn" resultType="java.lang.String">
		select max(vn) from topic
	</select>
	<!-- 申报信息修改 -->
	<update id="updateTopic" parameterType="java.util.Map">
		update topic set
		bookname=#{bookname},deadline=#{deadline},source=#{source},word_number=#{word_number},
		picture_number=#{picture_number},subject=#{subject},rank=#{rank},type=#{type},is_staging=#{is_staging},
		auth_progress=#{auth_progress},bank_account_id=#{bank_account_id},purchase=#{purchase},sponsorship=#{sponsorship},
		is_translation=#{is_translation},original_bookname=#{original_bookname},original_author=#{original_author},
		nation=#{nation},edition=#{edition},is_opts_handling=#{is_opts_handling},submit_time=#{submit_time}
		where id = #{topic_id}
	</update>
	<!-- 选题申报-额外信息 -->
	<insert id="insertTopicExtra" parameterType="java.util.Map">
		insert into
		topic_extra(topic_id,reason,price,score) values(#{topic_id},
		#{reason},#{price},#{score})
	</insert>
	<!-- 根据条件查询选题申报-额外信息 -->
	<select id="queryTopicExtra" parameterType="java.util.Map"
		resultType="java.util.Map">
		select * from topic_extra t1 where 1= 1
		<if test="topic_id != null and topic_id != ''">
			and t1.topic_id = #{topic_id}
		</if>
	</select>
	<!-- 额外信息修改 -->
	<update id="updateTopicExtra" parameterType="java.util.Map">
		update topic_extra
		set reason=#{reason},price=#{price},score=#{score} where id =
		#{extra_id}
	</update>
	<!-- 选题申报-编者情况 -->
	<insert id="insertTopicWriter" parameterType="java.util.Map">
		insert into
		topic_writer(topic_id,realname,sex,price,position,workplace)
		values(#{topic_id},
		#{realname},#{sex},#{price},#{position},#{workplace})
	</insert>
	<!-- 根据条件查询选题申报-编者情况 -->
	<select id="queryTopicWriter" parameterType="java.util.Map"
		resultType="java.util.Map">
		select id,topic_id,realname,sex*1 sex,price,position,workplace from
		topic_writer t1 where 1= 1
		<if test="topic_id != null and topic_id != ''">
			and t1.topic_id = #{topic_id}
		</if>
	</select>
	<!-- 删除编者情况 -->
	<delete id="delTopicWriter" parameterType="java.lang.String">
		delete from
		topic_writer where topic_id = #{topic_id}
	</delete>
	<!-- 查询作家用户关联银行信息 -->
	<select id="queryBank" parameterType="java.util.Map" resultType="java.util.Map">
		select * from writer_bank_account t where 1=1
		<if test="id != null and id != ''">
			and t.id = #{id}
		</if>
		<if test="account_number != null and account_number != ''">
			and t.account_number = #{account_number}
		</if>
		<if test="user_id != null and user_id != ''">
			and t.user_id = #{user_id}
		</if>
		order by gmt_create desc
	</select>
	<!-- 添加银行账户信息 -->
	<insert id="insertBank" parameterType="java.util.Map">
		insert into
		writer_bank_account(user_id,account_name,account_number,bank)
		values(#{user_id},#{account_name},#{account_number},#{bank})
	</insert>
	<!-- 修改银行账户信息 -->
	<update id="updateBank" parameterType="java.util.Map">
		update writer_bank_account
		set account_number =#{account_number},bank=#{bank}
		where id =
		#{bank_account_id}
	</update>
</mapper>