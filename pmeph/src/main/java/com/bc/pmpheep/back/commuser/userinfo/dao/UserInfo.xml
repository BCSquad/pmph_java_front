<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.bc.pmpheep.back.commuser.userinfo.dao.UserInfoDao">
    <!-- 根据ID查询作家表 -->
    <select id="queryWriter" parameterType="java.util.Map" resultType="java.util.Map">
       select * from writer_user where id=#{id}
    </select>
    
    <!-- 根据ID编辑普通员工个人资料 -->
    <update id="update" parameterType="java.util.Map">
      update writer_user set
        realname=#{realname},
        experience=#{experience},
        fax=#{fax},
        sex=#{sex},
        title=#{title},
        handphone=#{handphone},
        birthday=#{birthday},
        postcode=#{postcode},
        email=#{email},
        telephone=#{telephone},
        org_id=#{org_id},
        position=#{position},
        address=#{address},
        note=#{note},
        signature=#{signature},
        workplace=#{workplace}
        where id=#{id}
    </update>
    
    <!-- 根据ID更改作者头像 -->
    <update id="updateavatar" parameterType="java.util.Map">
       update writer_user set avatar=#{avatar} where id=#{id}
    </update>
    
        <!--修改密码-->
    <update id="updatePassword" parameterType="java.util.Map">
        UPDATE writer_user
        <set>
            <if test="password!=null and password!=null">password=#{password}</if>
        </set>
        WHERE id=#{id}
    </update>
</mapper>