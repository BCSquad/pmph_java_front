	<!-- 查询文章 -->
	<select id="listCmsContentVO" parameterType="PageParameter"
		resultType="CmsContentVO">
		select cc.*,wu.avatar,wu.id as userId,
		IFNULL(wu.realname,pu.realname) realname
		from cms_content cc
		left join pmph_user pu on pu.id=cc.author_id
		left join writer_user wu on wu.id=cc.author_id
		left join cms_category ccy on cc.category_id= ccy.id
		where   ccy.category_name='医学随笔' 
			and cc.is_deleted=0
			and cc.auth_status=2 
			and cc.is_published=1 
		<if test="parameter.title != null and parameter.title != ''">
			and cc.`title` like concat('%',#{parameter.title},'%')
		</if>
		order by 
				cc.`auth_date` desc
		<if test="start !=null and pageNumber != null">
			limit #{start},#{pageSize}
		</if>
	</select>
	<!-- 查询文章条数 -->
	<select id="getCmsContentCount" parameterType="PageParameter"
		resultType="java.lang.Integer">
		select count(*)
			from cms_content cc
			left join pmph_user pu on pu.id=cc.author_id
			left join writer_user wu on wu.id=cc.author_id
			left join cms_category ccy on cc.category_id= ccy.id
