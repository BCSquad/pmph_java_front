<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.bc.pmpheep.general.dao.UserDao">

    <select id="getUserInfo" resultType="map">
        <if test="usertype == 1">
            select * from writer_user where username=#{username}
        </if>
        <if test="usertype == 2">
            select * from org_user where username=#{username}
        </if>
    </select>

    <insert id="addNewUser" >
        <if test="usertype == 1">
            insert into  writer_user (username,password,nickname,realname,avatar)
            VALUES (#{username},'B1:40:2F:CF:BD:1D:92:05',#{username},#{username},'/static/default_image.png')
        </if>
        <if test="usertype == 2">
            insert into  org_user (username,password,nickname,realname) values (#{username},'B1:40:2F:CF:BD:1D:92:05',#{username},#{username})
        </if>
    </insert>
</mapper>