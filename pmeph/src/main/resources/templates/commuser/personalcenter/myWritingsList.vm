<input type="hidden" class="queryCondition" id="auth_status" value="$!{auth_status}">
<input type="hidden" class="queryCondition" id="is_staging" value="$!{is_staging}">

<div id="auth_status_select_wrapper">
	<span class="auth_status_select_wrapper_span">筛选：</span>
	<select id="auth_status_select" name="auth_status_select">
		<option value="" #if($!{auth_status}=='') selected #end >全部</option>
    	<option value="0" #if($!{auth_status}=='0') selected #end >待审核</option>
        <option value="1" #if($!{auth_status}=='1') selected #end >未通过</option>
        <option value="2" #if($!{auth_status}=='2') selected #end >已通过</option>
    </select>
</div>

<script src="${contextpath}resources/commuser/personalcenter/PersonalHomeSBWZ.js"></script>
<div id="listContent">
	#foreach($c in $!{List_map})
        <div class="xiaoxi">
            <div class="dtzhong">
                <div id="suibiwenzhangtp"></div>
                <div id="suibiwenzhanneirong">
                    <div class="suibibt">
                    	#if($!{c.auth_status}==0)
                    		<span id="shenhezhongwd"></span>
                    	#elseif($!{c.auth_status}==1)
                    		<span id="shenheweitonguo"></span>
                    	#elseif($!{c.auth_status}==2)
                    		<span id="shenheyitongguo"></span>
                    	#end
                        <span class="suibibiaoti">$!{c.title}</span></div>
                        <div class="shangright">$!{c.gmt_update}</div>
                    <br/>
                    <span class="suibineirong">$!{c.summary}</span>
                </div>
            </div>
            <div class="dtxia">
            	#if(false && $!{c.auth_status}!=2)
                	
	                <span id="bianji"></span>
	                <span class="dtxiawz"><a href="$!{contextpath}writerArticle/initWriteArticle.action?id=$!{c.id}&&userid=$!{permap.id}">编辑</a></span>
                #end
                <div class="operate_wrapper">
	                <a target="_blank" href="$!{contextpath}writerArticle/initWriteArticle.action?id=$!{c.id}&userid=$!{logUserId}"><div class="img img_edit" ></div><div>编辑</div></a> 
			        <a onclick="deleteArticle('$!{c.id}','$!{c.title}')" ><div class="img img_delete"></div><div>删除</div></a>
                </div>
            </div>
            <div id="tzxian"></div>
        </div>
    #end
</div>

